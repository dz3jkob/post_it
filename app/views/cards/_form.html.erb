<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :"describe the next steps" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :"describe the next steps" %>
    <%= f.collection_select :project_id, Project.all, :id, :name, {}, {:class=>'form-control'}  %>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <%= f.label :"select due date" %><br />
      <div class="input-group date datepicker">
        <%= f.text_field :duedate, class: "form-control", value: Date.today.strftime('%d/%m/%Y')%>   
        <span class="input-group-addon" id="btn" style="cursor:pointer;">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>      
      </div>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


